{
    "extends": "@algodiary/typescript-config/nextjs.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./*"],
            "@/components/*": ["./components/*"],
            "@/hooks/*": ["./hooks/*"],
            "@/lib": ["./lib/*"]
        },
        "typeRoots": ["./@types", "./node_modules/@types"]
    },
    "include": [
        "next-env.d.ts",
        "next.config.mjs",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "tailwind.config.js",
        "apps/**/*"
        // "../../packages/utils/src/zod.ts",
        // "../../packages/utils/src/response.ts"
    ],
    "exclude": ["node_modules"]
}
